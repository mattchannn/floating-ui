{
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "target": "es2021",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": ["packages/**/*", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
